<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class="col-12">
        <h1 class="titleText">Eat Da Burger</h1>

      </div>
    </div>
  </div>

<div class="row">
  <div class="col-12 addBurger">
    <h3 class="miniHeading">Add a Burger To Your List!</h3>
    <div class="burgtype">
      <form class="create-update-form" action="/insertOne" method="POST">
        <div class="form-group">
          <textarea type="text" name="burger_name"></textarea><br>
          <button class="btn btn-warning" type="submit" style="background-color: rgb(156, 102, 32);">add da burger!
          </button>
        </div>
    </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-6 burgers">
    <h3 class="miniHeading">Your Burger List!</h3>
    <br>
    <ul>
      {{#each burgers}}
      {{#unless this.devoured}}
      <div class="showBurger">
        <p>
          {{this.burger_name}}</p>
        <form action="/updateOne/{{this.id}}" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button type="submit" class="btn" style="background-color: #5DBCD2 ;">eat da burger!</button>
        </form>
        <br>
      </div>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6 devoured">
    <h3 class="miniHeading">Burgers Devoured!</h3>
    <br>
    <ul>
      {{#each burgers}}
      {{#if this.devoured}}
      <div class="devourBurger">
        <p>
          {{this.burger_name}}</p>
        <form action="/deleteOne/{{this.id}}" method="POST">
          <button type="submit" class="btn" style="background-color: #5DBCD2 ;">delete da burger! </button>
        </form>
        {{/if}}
        {{/each}}
    </ul>
  </div>
</div>
</div>
<hr>

</div>